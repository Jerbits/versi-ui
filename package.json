{
  "name": "versi-ui-components",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:typography": "lerna run --scope @jerbits/typography storybook --stream",
    "build:typography": "lerna run --scope @jerbits/typography build --stream",
    "test:typography": "lerna run --scope @jerbits/typography test --stream",
    "start:animate": "lerna run --scope @jerbits/animate storybook --stream",
    "build:animate": "lerna run --scope @jerbits/animate build --stream",
    "test:animate": "lerna run --scope @jerbits/animate test --stream",
    "start:forms": "lerna run --scope @jerbits/forms storybook --stream",
    "build:forms": "lerna run --scope @jerbits/forms build --stream",
    "test:forms": "lerna run --scope @jerbits/forms test --stream",
    "build": "lerna run build --stream",
    "sb": "storybook dev -p 6006",
    "sb-build": "storybook build",
    "make:package": "hygen package new",
    "make:comp": "hygen component new",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css}\"",
    "eslint": "eslint .",
    "test": "vitest"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.3.2",
    "@storybook/addon-essentials": "^8.0.8",
    "@storybook/addon-interactions": "^8.0.8",
    "@storybook/addon-links": "^8.0.8",
    "@storybook/addon-onboarding": "^8.0.8",
    "@storybook/blocks": "^8.0.8",
    "@storybook/react": "^8.0.8",
    "@storybook/react-vite": "^8.0.8",
    "@storybook/test": "^8.0.8",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.1.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.6",
    "eslint-plugin-storybook": "^0.8.0",
    "hygen": "^6.2.11",
    "lerna": "^8.1.2",
    "postcss": "^8.4.38",
    "postcss-import": "^16.1.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "storybook": "^8.0.8",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^3.9.0",
    "vite-plugin-lib-inject-css": "^2.0.1"
  }
}
